%h1 Login

=form_tag login_create_path do
  =label :user, :email, 'E-Mail'
  =text_field :user, 'email', :class => 'input'
  =label :user, :password, 'Password'
  =password_field :user,'password', :class => 'input'
  %br
  %br
  =submit_tag ' Login to my account', :class => 'button'
%p.signup= link_to 'Sign-up for an account', new_user_path