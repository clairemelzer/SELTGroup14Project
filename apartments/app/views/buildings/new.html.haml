%h1 Add a New Building

-unless @building ==nil
  -if @building.errors.any?
    %ul
    -@building.errors.full_messages.each do |msg|
      %li #{msg}
     

= form_tag buildings_path do

  = label :building, :address, 'Address'
  = text_field :building, 'address', :class => 'input'
  %br
  %br
  = label :building, :management, 'Management Company'
  = text_field :building, 'management', :class => 'input'
  %br
  %br
  = label :building, :laundry, 'Number of washing/dryer machines' 
  = text_field :building, 'laundry', :class => 'input'
  %br
  %br
  = label :building, :number_apartments, 'Number of apartments in building'
  = text_field :building, 'number_apartments', :class => 'input'
  %br
  %br
  = label :building, :parking, 'Parking Available?'
  = check_box :building, 'parking'
  %br
  %br
  %br
  = label :building, :pets, 'Pets allowed?'
  = check_box :building, 'pets'
  %br
  %br
  
  = submit_tag 'Add Building', :class => 'buttongreen'
