-# in app/views/movies/show.html.haml

%h2 Details about #{@building.address}


%ul#details
  %li
    Managment Company:
    = @building.management
  %li
    Number of Apartments:
    = @building.number_apartments
  %li 
    Number of building washer/dryer machines:
    = @building.laundry
  %li 
    Parking available:
    = @building.parking
  %li
    Pets allowed:
    = @building.pets


%h3 Pictures:
%br

%h3 Apartments in this building:


= form_tag building_path, :method => :get do
  Balcony:
  = check_box_tag :filterbalcony, params[:filterbalcony]

  
  Central Air?
  = check_box_tag :filterair, params[:filterair]
  
  Laundry in Unit?
  = check_box_tag :filterlaundry, params[:filterlaundry]
  
  Bedrooms:
  = collection_select :filterbedrooms, :bedrooms, @apartments, :bedrooms, :bedrooms, :prompt => "Bedrooms"
  
  Bathrooms:
  = collection_select :filterbathrooms, :bathrooms, @apartments, :bathrooms, :bathrooms, :prompt => "Bathrooms"
  

  
  %br
  = submit_tag 'Apply Filters'




%table#apartments
  %thead
    %tr
      %th Apartment Number
      %th Bedrooms
      %th Bathrooms
      %th Rent
      %th More Info
  %tbody
    - @apartments.each do |apartment|
      %tr
        %td= apartment.apartment_number
        %td= apartment.bedrooms
        %td= apartment.bathrooms
        %td= "$"+ apartment.rent.to_s
        %td= link_to "More about apartment number #{apartment.apartment_number}",  building_apartment_path(building_id:@building.id,id:apartment.id)


%br
%br
%br
= link_to 'Edit This Building', edit_building_path(@building)
%br
= link_to 'Add Apartment for Building', new_building_apartment_path(@building.id)
%br
= button_to 'Delete', building_path(@building), :class => "buttonred", :method => :delete, :confirm => 'Are you sure?'
%br

